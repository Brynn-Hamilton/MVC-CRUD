@model Teammember
@{
    ViewData["Title"] = "RSVP";
}
<div class="rsvpform">
<h1>RSVP</h1>
<hr />
</div>

<div class="container"> 
  <form method="post" action="/teammember/registered">
      <div class="row">
          <div class="col-25">
              <label for="fname">First Name</label>
          </div>
          <div class="col-75">
              <input type="text" id="fname" name="FirstName"/><br />
          </div>
      </div>

        <div class="row">
          <div class="col-25">
              <label for="lname">Last Name</label>
          </div>
          <div class="col-75">
              <input type="text" id="lname" name="LastName"  />@TempData["LastNameError"]<br />
          </div>
      </div>

        <div class="row">
          <div class="col-25">
              <label for="emailadd">Email</label>
          </div>
          <div class="col-75">
              <input type="text" id="emailadd" name="EmailAddress" />@TempData["EmailError"]<br />
          </div>
      </div>

        <div class="row">
          <div class="col-25">
              <label for="fname">Date Attending</label>
          </div>
          <div class="col-75">
              <select name="AttendanceDate">
            <option>10/11/2022 11:00:00 AM</option>
            <option>10/13/2022 2:00:00 PM</option>
            <option>10/18/2022 11:00:00 AM</option>
            <option>10/20/2022 2:00:00 PM</option>
        </select> <br />
          </div>
      </div>

        <div class="row">
          <div class="col-25">
              <label for="guestadd">Guest Name</label>
          </div>
          <div class="col-75">
              <input type="text" id="guestadd" name="GuestName" /><br />
          </div>
      </div>
      <input type="submit"/>    
    </form>
</div>
  




